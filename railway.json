{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "rm -rf dist node_modules/.cache && npm ci --legacy-peer-deps --no-cache && npm run build",
    "buildEnvironment": "V3",
    "nixpacksConfigPath": "/nixpacks.toml"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "npx serve -s dist -l $PORT",
    "healthcheckPath": "/",
    "sleepApplication": true,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
